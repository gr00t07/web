<html>

<body>
<script type="text/javascript">
function fun()
{
var lar,sml,i,n;
var a=[48,5,66,63,79,27,3,125,2022];
n=a.length;
lar=sml=a[0];
for(i=1;i<n;i++)
{
if(a[i]>lar)
lar=a[i];
if(a[i]<sml)
sml=a[i];
}
document.write("\n The smallest element is"+sml);
document.write("\n The largest element is"+lar);
}
</script>
<input type="button"onclick="fun()"value="click">
</boby>
